<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lx.myapp.FindFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/back_color">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="210dp" >
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="210dp" />
            <LinearLayout
                android:id="@+id/dotLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#19000000"
                android:padding="8dp" >
                <View
                    android:id="@+id/v_dot1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#ff00ff" />
                <View
                    android:id="@+id/v_dot2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:background="#ffff00" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="10dp"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ic1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_camera"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic1"
                    android:layout_marginLeft="2dp"
                    android:text="图库"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ic2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_dongtai"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic2"
                    android:layout_marginLeft="2dp"
                    android:text="动态"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ic3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_huati"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic3"
                    android:layout_marginLeft="2dp"
                    android:text="话题"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ic4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_jianbie"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic4"
                    android:layout_marginLeft="2dp"
                    android:text="鉴定"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文章 - 花艺生活"
                android:layout_marginTop="10dp"
                android:textSize="10sp"/>
            <ImageView
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:src="@drawable/img1"
                android:layout_margin="10dp"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="这种花看起来很高贵，你的学校有吗？"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文章 - 形色推荐"
                android:layout_marginTop="10dp"
                android:textSize="10sp"/>
            <ImageView
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:src="@drawable/img2"
                android:layout_margin="10dp"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="遥将香气报人知：仲春的含笑"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
